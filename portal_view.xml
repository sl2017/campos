							</group>
							<group>
								<field name="agegroup_ids" colspan="4" nolabel="1">
								<tree>
									<field name="age_group"/>
									<field name="pre_reg"  sum="Number of Pre-reg"/>
									<field name="number"  sum="Number of Participants"/>
					
								</tree>
							</field>
							</group>
						</group>
						<group>
							<notebook colspan="8" col="8">
								<page string="Contact" attrs="{'invisible': [('event_id2', '=', 2)]}">
									<group>
										<field name="contact_partner_id"
											context="{'default_parent_id': partner_id, 'default_customer': True, 'default_country_id' : country_id, 'show_address' : True, 'without_company':True, 'add_email': True, 'form_view_ref':'dds_camp.portal_partner_simple_form'}"  
