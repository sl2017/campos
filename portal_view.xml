											domain="[('parent_id','=',partner_id),('is_company','=',False)]" attrs="{'readonly': '1'}"/>
										<field name="econ_partner_id"
											context="{'default_parent_id': partner_id, 'default_customer': True, 'default_country_id' : country_id, 'show_address' : True, 'without_company':True, 'add_email': True, 'form_view_ref':'dds_camp.portal_partner_simple_form'}"
											options='{"always_reload": True, "highlight_first_line": True}'
											domain="[('parent_id','=',partner_id),('is_company','=',False)]" />
									</group>

								</page>
								<page string="Accommodation" attrs="{'invisible': [('event_id2', '=', 1)]}">
									<group>
									
										<field name="accommodation"/>
										<field name="parking"/>
										<field name="power"/>
																	
									</group>
								</page>
								<page string="Home Hospitality/Friendship Groups" colspan="8"
									col="8" attrs="{'invisible': [('event_id2', '=', 2)]}">
									<group colspan="8" col="8">
										<group>
											<field name="hh_precamp" attrs="{'invisible': [('foreigners','=',False)]}"/>
											<field name="hh_aftercamp" attrs="{'invisible': [('foreigners','=',False)]}"/>
											<field name="hh_precamp_prv" attrs="{'invisible': [('foreigners','=',True)]}"/>
											<field name="hh_aftercamp_prv" attrs="{'invisible': [('foreigners','=',True)]}"/>
										</group>
										<group>
											<field name="want_friendshipgroup" attrs="{'invisible': [('foreigners','=',True)]}" />
											<field name="has_friendshipgroup" />
											<field name="friendshipgroup_name" />
										</group>
									</group>
								</page>
								<page string="Special considerations" colspan="8" col="8">
									<group colspan="8" col="8">
										<group>
											<field name="hcap" />
											<field name="hcap_desc" />
											<field name="hcap_specneeds" />
										</group>
										<group>
											<field name="food_allergy" />
											<field name="food_allergy_desc" />
										</group>
									</group>

								</page>
								<!-- 
								<page string="Participants" colspan="8" col="8">
									<div>Use the Participants button above to add</div>
									<field name="participant_ids" colspan="4" options="{'create': False}">
										<tree string="Participants">
											<field name="name"/>
											 
												context="{'default_parent_id': parent.partner_id, 'default_customer': True, 'name_only': True}"
												domain="[('parent_id','=',parent.partner_id),('is_company','=',False)]"/>  
											
											<field name="patrol"/>
											
											<field name="day_summery"/>

										</tree>
									</field>
								</page>
								 -->
								<page string="Webshop" groups='event.group_event_manager'>
									<group colspan="4">
										<field name="webshop_orderno" />
										<field name="webshop_order_product_id" />
										<button name="button_open_weborder_url" type="object"
											string="Webshop Order" icon="gtk-zoom-in" help="Open Order Detail"
											colspan="2" />
									</group>
								</page>
								<page string="Agreements" >
									<group colspan="4">
										
										<field name='foreigners' attrs="{'invisible': True}"/>
										<field name='agreements' attrs="{'readonly': '1'}"/>
										

									</group>
								</page>
							</notebook>
						</group>


					</sheet>

				</form>
			</field>
		</record>

