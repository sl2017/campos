							<field name="partner_id" attrs="{'readonly': '1'}" options="{'no_open': True}" />
						</h1>
						<group>
							<group>
								<field name="event_id" attrs="{'readonly': '1'}" options="{'no_open': True, 'create': False, 'create_edit': False}"/>
								<field name="event_id2"/>
								<field name="country_id" attrs="{'readonly': '1'}"  on_change="onchange_country_id(country_id)" options="{'no_open': True, 'create': False, 'create_edit': False}"/>
